{
  "name": "misogi-copilot-vscode",
  "displayName": "Misogi Copilot",
  "description": "AI coding assistant for VSCode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "copilot",
    "openai",
    "code completion",
    "assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "openai": "^5.11.0",
    "uuid": "^10.0.0"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "misogiCopilot",
          "title": "Misogi Copilot",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "misogiCopilot": [
        {
          "type": "webview",
          "id": "misogiCopilot.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.completeCode",
        "title": "Misogi Copilot: Complete Code",
        "category": "Misogi Copilot"
      },
      {
        "command": "extension.suggestCode",
        "title": "Misogi Copilot: Suggest Code Improvements",
        "category": "Misogi Copilot"
      },
      {
        "command": "extension.configureApiKey",
        "title": "Misogi Copilot: Configure API Key",
        "category": "Misogi Copilot"
      },
      {
        "command": "extension.openChatPanel",
        "title": "Misogi Copilot: Open Chat in Side Panel",
        "category": "Misogi Copilot"
      },
      {
        "command": "extension.clearChatHistory",
        "title": "Misogi Copilot: Clear Chat History",
        "category": "Misogi Copilot"
      }
    ],
    "keybindings": [
      {
        "command": "extension.completeCode",
        "key": "ctrl+space",
        "mac": "option+space",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.suggestCode",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorHasSelection"
      },
      {
        "command": "extension.openChatPanel",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      }
    ],
    
    "configuration": {
      "title": "Misogi Copilot",
      "properties": {
        "misogiCopilot.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for code completions",
          "scope": "application"
        },
        "misogiCopilot.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "enum": [
            "gpt-3.5-turbo",
            "gpt-4",
            "gpt-4-turbo-preview"
          ],
          "description": "OpenAI model to use for completions"
        },
        "misogiCopilot.maxTokens": {
          "type": "number",
          "default": 150,
          "minimum": 50,
          "maximum": 1000,
          "description": "Maximum number of tokens for completions"
        },
        "misogiCopilot.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for AI completions (0 = deterministic, 2 = very creative)"
        },
        "misogiCopilot.enableHover": {
          "type": "boolean",
          "default": false,
          "description": "Enable hover hints for AI assistance"
        }
      }
    }
  }
}
